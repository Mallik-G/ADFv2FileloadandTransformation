{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "ADFv2nithesh"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/TransformedTable')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureSqlDatabase",
					"type": "LinkedServiceReference"
				},
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "Service Vendor",
						"type": "nvarchar"
					},
					{
						"name": "Line of business",
						"type": "nvarchar"
					},
					{
						"name": "PO",
						"type": "nvarchar"
					},
					{
						"name": "SKU",
						"type": "nvarchar"
					},
					{
						"name": "Quantity",
						"type": "int",
						"precision": 10
					},
					{
						"name": "Serial Number",
						"type": "nvarchar"
					},
					{
						"name": "CVE SKU",
						"type": "nvarchar"
					},
					{
						"name": "OEM SKU",
						"type": "nvarchar"
					}
				],
				"typeProperties": {
					"tableName": "[concat('[', 'asr].[Finaltable]')]"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/DF_SQLDBtoCSV')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "TransformedTable",
								"type": "DatasetReference"
							},
							"name": "SQLDBtable",
							"script": "source(output(\n\t\t{Service Vendor} as string,\n\t\t{Line of business} as string,\n\t\tPO as string,\n\t\tSKU as string,\n\t\tQuantity as integer,\n\t\t{Serial Number} as string,\n\t\t{CVE SKU} as string,\n\t\t{OEM SKU} as string\n\t),\n\tallowSchemaDrift: true,\n\tvalidateSchema: false,\n\tformat: 'table') ~> SQLDBtable"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "Destination_csv",
								"type": "DatasetReference"
							},
							"name": "sink1",
							"script": "SQLDBtable sink(allowSchemaDrift: true,\n\tvalidateSchema: false,\n\tpartitionBy('hash', 1),\n\tpartitionFileNames:['finalresult'],\n\ttruncate:true) ~> sink1"
						}
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/TransformedTable')]"
			]
		}
	]
}